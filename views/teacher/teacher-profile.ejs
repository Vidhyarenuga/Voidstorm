<% layout('boilerplate2') %>

<div class="container">
<div class="row">
  <div class="col-lg-6 col-md-offset-3">

    <h1>Profile</h1>
    <form role="form" method="post">
      <div class="form-group">
        <label for="name">Handle:</label>
        <input type="text" class="form-control" name="handle">
      </div>

      <div class="form-group">
        <label for="name">Company:</label>
        <input type="text" class="form-control" name="company">
      </div>
      <div class="form-group">
          <label for="name">Profession:</label>
      <select name="profession"  class="form-control" placeholder="Select professional status">
        <option value="senior developer">Senior developer</option>
        <option value="junior developer">Junior developer</option>
        <option value="manager">Manager</option>
        <option value="student">Student</option>
        <option value="teacher">Teacher</option>
        <option value="intern">Intern</option>
        <option value="other">Other</option>
    </select>
      </div>
      <div class="form-group">
          <label for="name">Skills:</label>
          <input type="text" class="form-control" name="skills">
        </div>
      <div class="form-group">
        <label for="name">Website:</label>
        <input type="text" class="form-control" name="website">
      </div>

      <div class="form-group">
        <label for="name">Location:</label>
        <input type="text" class="form-control" name="location">
      </div>
      
      
      <div class="form-group">
        <label for="name">Github Username:</label>
        <input type="text" class="form-control" name="githubusername">
      </div>
      
      <div class="form-group">
        <label for="name">Facebook:</label>
        <input type="text" class="form-control" name="facebook">
      </div>
      <div class="form-group">
        <label for="name">Twitter:</label>
        <input type="text" class="form-control" name="twitter">
      </div>
      <div class="form-group">
        <label for="name">Instagram:</label>
        <input type="text" class="form-control" name="instagram">
      </div>
      <div class="form-group">
        <label for="name">LinkedIn:</label>
        <input type="text" class="form-control" name="linkedin">
      </div>
      <div class="form-group">
        <label for="name">Youtube:</label>
        <input type="text" class="form-control" name="youtube">
      </div>

      <button type="submit" class="btn btn-success">Submit</button>

    </form>
</div>
</div>
</div>
